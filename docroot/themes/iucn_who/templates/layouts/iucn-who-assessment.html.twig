{%
  set classes = [
  'iucn-site-assessment-wrapper',
  ]
%}
  {% set node = content['#node'] %}

    <div{{ attributes.addClass(classes) }}>
    <!-- Tab panes -->

    <div class="tab-content">
      <div role="tabpanel" class="tab--summary tab-pane active fade in" id="summary">
        <h2 class="tab-title summary visible-mobile">{{ 'Summary'|assessment_t }}</h2>
        {{ content.summary }}
      </div>
      <div role="tabpanel" class="tab--full-assessment tab-pane fade" id="full-assessment">
        <h2 class="tab-title full-assessment visible-mobile">{{ 'Full assessment'|assessment_t }}</h2>
        <div class="assessment-expand">
          <p>{{ 'Click the + and - signs to expand or collapse full accounts of information under each topic. You can also view the entire list of information by clicking Expand all on the top left.'|assessment_t }}</p>
          <ul class="assessment-expand-buttons">
            <li><button class="btn-link expand-button">{{ 'Expand all'|assessment_t }}</button></li>
            <li><button class="btn-link collapse-button">{{ 'Collapse all'|assessment_t }}</button></li>
          </ul>
        </div>

        {{ content.full_assessment_values }}

      </div>
      <div role="tabpanel" class="tab--references tab-pane fade" id="references">
        <h2 class="tab-title references visible-mobile">{{ 'References'|assessment_t }}</h2>
        {{ content.references }}
      </div>
    </div>
  </div>
