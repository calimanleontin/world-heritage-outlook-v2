{%
  set classes = [
  'iucn-site-wrapper',
  ]
  %}
{% set has_assessment = content.assessment|render|striptags|trim is not empty %}
  <div{{ attributes.addClass(classes) }}>
  <div class="container">
    <div class="row">
      <div class="region-site-title{% if has_assessment %} col-sm-8 col-md-12 {% else %} col-sm-12 {% endif %}">
        {{ content.title }}
        <div class="visible-mobile region-site-mobile-image">
          {{ content.mobile_image }}
        </div>
      </div>
      {% if has_assessment %}
        <div class="region-site-rating col-sm-4 col-md-4">
          {{ content.left_1 }}
        </div>
        <div class="region-site-general-info col-sm-8 col-md-4 ">
          {{ content.middle_1 }}
        </div>

      {% else %}
        <div class="col-sm-8 col-md-8">
          <div class="no-assessment-placeholder">
            <span>{{ 'Conservation Outlook Assessment coming soon'|assessment_t }}</span>
          </div>
        </div>
      {% endif %}
      <div class="region-site-image col-sm-4 col-md-4">
        {{ content.right_1 }}
      </div>
      <div class="col-sm-12 region-site-sidemenu-toggle">
        <!-- Sidemenu toggle -->
        <div class="sidemenu-toggle-wrapper">
          <a role="button" class="btn btn-info sidemenu-toggle" data-toggle="dropdown" href="#sidemenu" id="sidemenu-toggle"><span>{{ 'See all information'|assessment_t }}</span></a>
        </div>
      </div>
    </div>
  </div>
  {% if has_assessment %}
    <div class="container-fluid">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs visible-desktop" role="tablist" id="assessment-tabs-desktop">
        <li role="presentation" class="active">
          <a href="#summary" aria-controls="summary" role="tab" data-toggle="tab">
            <strong class="tab-label">{{ 'Summary'|assessment_t }}</strong>
            <span class="tab-description">{{ 'Overview of the site\'s Conservation Outlook'|assessment_t  }}</span>
            <span class="tab-read-more">{{ 'Read more'|assessment_t  }}</span>
          </a>
        </li>
        <li role="presentation">
          <a href="#full-assessment" aria-controls="full-assessment" role="tab" data-toggle="tab">
            <strong class="tab-label">{{ 'Full assessment'|assessment_t }}</strong>
            <span class="tab-description">{{ 'The complete Conservation Outlook Assessment for this site, with more details on values, threats, protection and management'|assessment_t  }}</span>
            <span class="tab-read-more">{{ 'Read more'|assessment_t  }}</span>
          </a>
        </li>
        <li role="presentation">
          <a href="#references" aria-controls="references" role="tab" data-toggle="tab">
            <strong class="tab-label">{{ 'References'|assessment_t }}</strong>
            <span class="tab-description">{{ 'The source of information for the Conservation Outlook Assessment'|assessment_t  }}</span>
            <span class="tab-read-more">{{ 'See references'|assessment_t  }}</span>
          </a>
        </li>
      </ul>
    </div>
  {% endif %}
  <div class="container">
    <div class="row">
      <div class="col-sm-8">
        {% if has_assessment %}
          {{ content.assessment }}
        {% endif %}
      </div>
      <div class="col-sm-4 sidemenu" id="sidemenu">
        {% if has_assessment is not empty %}
          <ul class="nav nav-tabs visible-mobile" role="tablist" id="assessment-tabs-mobile">
            <li role="presentation" class="active">
              <a href="#summary" aria-controls="summary" role="tab" data-toggle="tab">
                <strong class="tab-label"><span class="back-to-prefix">{{ 'Back to'|assessment_t }}</span> {{ 'Summary'|assessment_t }}</strong>
              </a>
            </li>
            <li role="presentation">
              <a href="#full-assessment" aria-controls="full-assessment" role="tab" data-toggle="tab">
                <strong class="tab-label"><span class="back-to-prefix">{{ 'Back to'|assessment_t }}</span> {{ 'Full assessment'|assessment_t }}</strong>
              </a>
            </li>
            <li role="presentation">
              <a href="#references" aria-controls="references" role="tab" data-toggle="tab">
                <strong class="tab-label"><span class="back-to-prefix">{{ 'Back to'|assessment_t }}</span> {{ 'References'|assessment_t }}</strong>
              </a>
            </li>
          </ul>
        {% endif %}
        {{ content.sidebar }}
      </div>
    </div>
  </div>
</div>
