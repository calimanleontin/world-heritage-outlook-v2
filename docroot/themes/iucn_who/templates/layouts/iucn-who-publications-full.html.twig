
{%
set classes = [
'iucn-publications-full-wrapper',
]
%}

<div{{ attributes.addClass(classes) }}>
    {# <div class="container"> #}
        <div class="row">
            <div class="col-sm-8">
                <div class="publication-content">
                    <div class="publication-title">{{ content.title }}</div>
                </div>
                <div class="publication-content">
                    {{ content.field_author }}
                </div>
                <div class="publication-year publication-content">
                    {{ content.field_publication_year }}
                </div>
                <div class="publication-content">
                    {{ content.body }}
                </div>

            </div>
            <div class="col-sm-4">
                <h2 class="bottom-border">
                    {% trans %}
                    Resources
                    {% endtrans %}
                </h2>
                {{ content.right_1 }}
                {% if content.right_2|render %}
                        <div id="download-publication-button">
                            <a href="{{ file_url(download_pdf_uri) }}" download>
                                {% trans %}
                                Download the report
                                {% endtrans %}
                            </a>
                        </div>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8">
                <div class="publications-back-button">
                    <a href="#" class="back-button"><i class="backicon"></i>{% trans %}Back{% endtrans %}</a>
                    <a href="#" class="go-to-button"><i class="backicon"></i>{% trans %}Go to publications{% endtrans %}</a>
                </div>
            </div>
        </div>
    {# </div> #}
</div>


