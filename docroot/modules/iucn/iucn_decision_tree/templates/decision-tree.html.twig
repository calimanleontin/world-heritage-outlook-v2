{% if rendered_content %}
    {{ rendered_content }}
{% endif %}

{% if decisions %}
    {% if decisions['yes'] and decisions['no'] %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 col-md-6">
                    <a class="decision-button-holder" href="#decision-{{ entity_id }}" rel="load-decisions" data-decisions="{{ decisions['yes']|join(',') }}" data-container="decision-{{ entity_id }}">{{ 'Yes'|t }}</a>
                </div>
                <div class="col-sm-6 col-md-6">
                    <a class="decision-button-holder" href="#decision-{{ entity_id }}" rel="load-decisions" data-decisions="{{ decisions['no']|join(',') }}" data-container="decision-{{ entity_id }}">{{ 'No'|t }}</a>
                </div>
            </div>
        </div>
    {% endif %}
{% endif %}
<div id="decision-{{ entity_id }}"></div>
