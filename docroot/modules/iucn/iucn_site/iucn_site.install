<?php

use Drupal\node\Entity\Node;

/**
 * Add missing translations to all sites.
 */

function iucn_site_update_8001() {

  $node_ids = \Drupal::entityQuery('node')
    ->condition('type', 'site')
    ->execute();
  if ($node_ids) {
    foreach ($node_ids as $node_id) {
      $node = Node::load($node_id);
      $node->save();
    }
  }
}