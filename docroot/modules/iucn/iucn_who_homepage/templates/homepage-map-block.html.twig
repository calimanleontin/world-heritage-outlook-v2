<div class="row">
  <div class="container-fluid">
    <div class="col col-sm-3">
      <div id="map-site-search">
      <form action="">
        <input type="text" id="search">
        <button></button>
        <a href="#">{{ 'Advanced search' | trans }}</a>
      </form>
      </div>
      <div id="map-filters">
        <h3>{{ '2017 Conservation Outlook rating' | trans }}</h3>
        <ul>
          <li><a data-filter="1" href="javascript:void(0);">Good</a></li>
          <li><a data-filter="2" href="javascript:void(0);">Good with some concerns</a></li>
          <li><a data-filter="3" href="javascript:void(0);">Significant concern</a></li>
          <li><a data-filter="4" href="javascript:void(0);">Critical</a></li>
          <li><a data-filter="5" href="javascript:void(0);">Data deficient</a></li>
          <li><a data-filter="6" href="javascript:void(0);">Coming soon</a></li>
        </ul>
        <a data-filter="all" href="javascript:void(0);">{% trans %}See all ({{ sites_total_count }}){% endtrans %}</a>
      </div>
      <div id="map-site-details">
        {{ 'Click on a Natural Site for details' | trans }}
      </div>
    </div>
    <div class="col col-sm-9">
      {{ markup_map | raw }}
    </div>
  </div>
</div>
