<div class="container-fluid">
  <div class="row map-block-main">

    <div class="col col-sm-3 map-col-left">
      <div class="title-container">
        <h3>{{ 'Map legend' | trans }}</h3>
        <div><a href="javascript:benefitsCategoriesExpandAll();">{{ 'Expand all' }}</a> | <a href="javascript:benefitsCategoriesCollapseAll();">{{ 'Collapse all' }}</a></div>
      </div>
      <div class="map-filters-container" id="map-filters-container" data-iucn-simplebar="visible" data-prevent-scroll>
        <div id="map-filters" class="panel-group map-filters">
          <div class="map-filter-item benefit-category-container">
            <a href="#all" data-category="all" class="benefit-category">{{ 'All World Heritage Sites' | trans }}</a>
          </div>
          {% for category in categories %}
          <section class="block-facet--links block block-facets clearfix panel panel-default">
            <div class="panel-heading" role="tab" id="#heading-topic-{{ category.id }}">
              <a class="block-title panel-title" role="button" data-parent="#map-filters" data-toggle="collapse" href="#topic-{{ category.id }}" aria-expanded="false" aria-controls="topic-{{ category.id }}">
                <span class="icon-collapse"></span>{{ category.name.value }}</a>
            </div>
            <div id="topic-{{ category.id }}" class="block-facet--links block block-facets clearfix panel panel-default panel-collapse fade collapse" role="tabpanel" aria-expanded="true" style="">
              <div class="panel-body">
                <ul class="item-list__links map-filter-items">
                  {% for child in category.children %}
                    <li class="map-filter-item facet-item benefit-category-container"><a href="#{{ child.id }}" data-category="{{ child.id }}" class="benefit-category">
                            {% if child.field_category_image.entity.uri.value %}
                      <img src="{{ file_url(child.field_category_image.entity.uri.value) }}"/>
                            {% endif %}<span>{{ child.name.value }}</span></a></li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          </section>
          {% endfor %}
        </div>
      </div>
      <div id="map-site-details" class="map-site-details">
        {{ empty_selection_placeholder_markup | raw }}
      </div>
    </div>
    <div class="col col-sm-9 map-col-right">
      {{ markup_map | raw }}
    </div>
  </div>

  {% if block_footer_text %}
  <div class="row map-block-footer">
    <div class="block-footer-text">{{ block_footer_text }}</div>
  </div>
  {% endif %}
</div>
